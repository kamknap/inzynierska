<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- ==================== BASE APPLICATION THEME ==================== -->
    <!-- Używamy Theme.Material3.Light zamiast DayNight aby wyłączyć tryb ciemny -->
    <style name="Base.Theme.Fithub" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary colors - Fioletowy -->
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryVariant">@color/purple_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/purple_primary_very_light</item>
        <item name="colorOnPrimaryContainer">@color/purple_primary_dark</item>
        
        <!-- Secondary colors - Zielony -->
        <item name="colorSecondary">@color/green_success</item>
        <item name="colorSecondaryVariant">@color/green_success_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/green_success_very_light</item>
        <item name="colorOnSecondaryContainer">@color/green_success_dark</item>
        
        <!-- Tertiary colors - Niebieski -->
        <item name="colorTertiary">@color/blue_info</item>
        <item name="colorTertiaryContainer">@color/blue_info_very_light</item>
        <item name="colorOnTertiaryContainer">@color/blue_info_dark</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_secondary</item>
        <item name="colorSurface">@color/background_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/background_tertiary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/error_light</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorTertiary">@color/text_tertiary</item>
        
        <!-- Status bar - jasny z ciemnym tekstem -->
        <item name="android:statusBarColor">@color/background_secondary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        
        <!-- Material Components -->
        <item name="materialButtonStyle">@style/Widget.Fithub.Button</item>
        <item name="materialCardViewStyle">@style/Widget.Fithub.CardView</item>
        <item name="textInputStyle">@style/Widget.Fithub.TextInputLayout</item>
        <item name="editTextStyle">@style/Widget.Fithub.TextInputEditText</item>
        <item name="bottomNavigationStyle">@style/Widget.Fithub.BottomNavigationView</item>
    </style>

    <style name="Theme.Fithub" parent="Base.Theme.Fithub" />
    
    <!-- ==================== SPLASH THEME (ciemne tło) ==================== -->
    <style name="Theme.Fithub.Splash" parent="Base.Theme.Fithub">
        <!-- Status bar - ciemny z jasnym tekstem dla ekranu Splash -->
        <item name="android:statusBarColor">@color/purple_primary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>
    
    <!-- ==================== BUTTON STYLES ==================== -->
    <style name="Widget.Fithub.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/purple_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="elevation">2dp</item>
    </style>
    
    <style name="Widget.Fithub.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/purple_primary</item>
        <item name="strokeColor">@color/purple_primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="Widget.Fithub.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/purple_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="Widget.Fithub.Button.Success" parent="Widget.Fithub.Button">
        <item name="backgroundTint">@color/green_success</item>
    </style>
    
    <style name="Widget.Fithub.Button.Info" parent="Widget.Fithub.Button">
        <item name="backgroundTint">@color/blue_info</item>
    </style>
    
    <!-- ==================== CARD STYLES ==================== -->
    <style name="Widget.Fithub.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <style name="Widget.Fithub.CardView.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeColor">@color/divider</item>
        <item name="strokeWidth">1dp</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <!-- ==================== TEXT INPUT STYLES ==================== -->
    <style name="Widget.Fithub.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/purple_primary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/purple_primary</item>
        <item name="android:textColorHint">@color/text_tertiary</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="Widget.Fithub.TextInputEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_tertiary</item>
    </style>
    
    <!-- ==================== TEXT STYLES ==================== -->
    <style name="TextAppearance.Fithub.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.Fithub.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.Fithub.Headline3" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.Fithub.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.Fithub.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextAppearance.Fithub.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_tertiary</item>
    </style>
    
    <!-- ==================== BOTTOM NAVIGATION STYLE ==================== -->
    <style name="Widget.Fithub.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="itemRippleColor">@color/ripple_light</item>
        <item name="elevation">8dp</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>
    
    <!-- ==================== DIALOG STYLES ==================== -->
    <style name="ThemeOverlay.Fithub.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorSecondary">@color/purple_primary</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Fithub.Dialog</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Fithub.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Fithub.Button.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Fithub.Button.Dialog.Text</item>
    </style>
    
    <style name="ShapeAppearance.Fithub.Dialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
    
    <style name="MaterialAlertDialog.Fithub.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/purple_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Widget.Fithub.Button.Dialog" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/purple_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Widget.Fithub.Button.Dialog.Text" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <!-- ==================== PROGRESSBAR STYLES ==================== -->
    <style name="Widget.Fithub.ProgressBar.Horizontal" parent="Widget.Material3.LinearProgressIndicator">
        <item name="trackColor">@color/purple_primary_very_light</item>
        <item name="indicatorColor">@color/purple_primary</item>
        <item name="trackCornerRadius">8dp</item>
        <item name="trackThickness">8dp</item>
    </style>
    
    <style name="Widget.Fithub.ProgressBar.Circular" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorColor">@color/purple_primary</item>
        <item name="trackColor">@color/purple_primary_very_light</item>
    </style>
    
    <!-- ==================== NUMBER PICKER STYLE ==================== -->
    <style name="ThemeOverlay.Fithub.NumberPicker" parent="ThemeOverlay.Fithub.Dialog">
        <!-- Wyraźne kolory dla NumberPicker w dialogu -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="colorControlNormal">@color/purple_primary</item>
        <item name="colorAccent">@color/purple_primary</item>
    </style>
    
    <!-- ==================== SPINNER STYLE ==================== -->
    <style name="Widget.Fithub.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:popupBackground">@color/white</item>
    </style>
</resources>