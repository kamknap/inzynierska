<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¯ CEL OSIÄ„GNIÄ˜TY!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/purple_primary"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvGoalMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gratulacje!"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvGoalPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+100 pkt"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/green_success"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnOkGoal"
            style="@style/Widget.Fithub.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:paddingHorizontal="48dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
