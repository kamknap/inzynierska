<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_normal"
    android:background="@color/background_secondary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nagłówek -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dziennik kalorii"
            style="@style/TextAppearance.Fithub.Headline2"
            android:textColor="@color/purple_primary"
            android:layout_marginBottom="@dimen/spacing_normal" />

        <!-- Dni tygodnia -->
        <HorizontalScrollView
            android:id="@+id/hsvWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/llDaysContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_small" />

        </HorizontalScrollView>

        <!-- Podsumowanie dzienne - makroskładniki -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvMacros"
            style="@style/Widget.Fithub.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_normal">

            <TextView
                android:id="@+id/tvDailyTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Fithub.Body1"
                android:textColor="@color/text_primary" />
        </androidx.cardview.widget.CardView>


        <!-- Sekcje posiłków -->

        <!-- Śniadanie -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvBreakfast"
            style="@style/Widget.Fithub.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Nagłówek śniadania -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_small">

                    <TextView
                        android:id="@+id/tvBreakfast"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Śniadanie"
                        style="@style/TextAppearance.Fithub.Headline3"
                        android:textColor="@color/green_success" />

                    <ImageButton
                        android:id="@+id/btnAddBreakfast"
                        android:layout_width="@dimen/icon_size_xlarge"
                        android:layout_height="@dimen/icon_size_xlarge"
                        android:background="@drawable/bg_button_add_meal"
                        android:src="@drawable/ic_add_white"
                        android:contentDescription="Dodaj śniadanie"
                        android:scaleType="center"
                        android:padding="@dimen/spacing_medium" />

                </LinearLayout>

                <!-- Lista posiłków śniadaniowych -->
                <LinearLayout
                    android:id="@+id/llBreakfastMeals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Obiad -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvLunch"
            style="@style/Widget.Fithub.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Nagłówek obiadu -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_small">

                    <TextView
                        android:id="@+id/tvLunch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Obiad"
                        style="@style/TextAppearance.Fithub.Headline3"
                        android:textColor="@color/green_success" />

                    <ImageButton
                        android:id="@+id/btnAddLunch"
                        android:layout_width="@dimen/icon_size_xlarge"
                        android:layout_height="@dimen/icon_size_xlarge"
                        android:background="@drawable/bg_button_add_meal"
                        android:src="@drawable/ic_add_white"
                        android:contentDescription="Dodaj obiad"
                        android:scaleType="center"
                        android:padding="@dimen/spacing_medium" />

                </LinearLayout>

                <!-- Lista posiłków obiadowych -->
                <LinearLayout
                    android:id="@+id/llLunchMeals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Kolacja -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvDinner"
            style="@style/Widget.Fithub.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Nagłówek kolacji -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_small">

                    <TextView
                        android:id="@+id/tvDinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Kolacja"
                        style="@style/TextAppearance.Fithub.Headline3"
                        android:textColor="@color/green_success" />

                    <ImageButton
                        android:id="@+id/btnAddDinner"
                        android:layout_width="@dimen/icon_size_xlarge"
                        android:layout_height="@dimen/icon_size_xlarge"
                        android:background="@drawable/bg_button_add_meal"
                        android:src="@drawable/ic_add_white"
                        android:contentDescription="Dodaj kolację"
                        android:scaleType="center"
                        android:padding="@dimen/spacing_medium" />

                </LinearLayout>

                <!-- Lista posiłków kolacyjnych -->
                <LinearLayout
                    android:id="@+id/llDinnerMeals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Przekąski -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvSnacks"
            style="@style/Widget.Fithub.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Nagłówek przekąsek -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_small">

                    <TextView
                        android:id="@+id/tvSnacks"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Przekąski"
                        style="@style/TextAppearance.Fithub.Headline3"
                        android:textColor="@color/green_success" />

                    <ImageButton
                        android:id="@+id/btnAddSnacks"
                        android:layout_width="@dimen/icon_size_xlarge"
                        android:layout_height="@dimen/icon_size_xlarge"
                        android:background="@drawable/bg_button_add_meal"
                        android:src="@drawable/ic_add_white"
                        android:contentDescription="Dodaj przekąski"
                        android:scaleType="center"
                        android:padding="@dimen/spacing_medium" />

                </LinearLayout>

                <!-- Lista przekąsek -->
                <LinearLayout
                    android:id="@+id/llSnacksMeals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Trening -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvTraining"
            style="@style/Widget.Fithub.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Nagłówek treningu -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_small">

                    <TextView
                        android:id="@+id/tvTraining"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Trening"
                        style="@style/TextAppearance.Fithub.Headline3"
                        android:textColor="@color/blue_info" />

                    <ImageButton
                        android:id="@+id/btnTraining"
                        android:layout_width="@dimen/icon_size_xlarge"
                        android:layout_height="@dimen/icon_size_xlarge"
                        android:background="@drawable/bg_button_add_training"
                        android:src="@drawable/ic_add_white"
                        android:contentDescription="Dodaj trening"
                        android:scaleType="center"
                        android:padding="@dimen/spacing_medium" />

                </LinearLayout>

                <!-- Lista treningów -->
                <LinearLayout
                    android:id="@+id/llTraining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>