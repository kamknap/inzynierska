<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Sekcja: Poziom i Punkty -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardLevelPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Poziom -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Poziom"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary" />

                    <TextView
                        android:id="@+id/tvUserLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        tools:text="15" />
                </LinearLayout>

                <!-- Separator -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="?android:attr/dividerHorizontal" />

                <!-- Punkty -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Punkty"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary" />

                    <TextView
                        android:id="@+id/tvUserPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        tools:text="2450" />

                    <TextView
                        android:id="@+id/tvPointsToNextLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Do kolejnego poziomu: 0"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary"
                        tools:text="Do poziomu 16: 550 pkt" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sekcja: Streak i Waga -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardStreakWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Streak -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”¥ Streak"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary" />

                    <TextView
                        android:id="@+id/tvUserStreak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 dni"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        tools:text="14 dni" />
                </LinearLayout>

                <!-- Separator -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="?android:attr/dividerHorizontal" />

                <!-- SchudniÄ™to/Nabyto -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvWeightChangeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SchudniÄ™to"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary"
                        tools:text="Nabyto" />

                    <TextView
                        android:id="@+id/tvWeightChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0 kg"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        tools:text="+3.5 kg" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sekcja: Aktywne wyzwanie -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardActiveChallenge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aktywne wyzwanie"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvActiveChallengeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brak aktywnego wyzwania"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    tools:text="7-dniowe wyzwanie cardio" />

                <ProgressBar
                    android:id="@+id/progressActiveChallenge"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:progress="60" />

                <TextView
                    android:id="@+id/tvActiveChallengeProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:text="PostÄ™p: 4/7 dni" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sekcja: Przyciski akcji -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:padding="8dp"
                android:alignmentMode="alignBounds">

                <!-- Gablota z odznakami -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBadges"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:text="ðŸ†\nGablota"
                    android:textSize="14sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <!-- PorÃ³wnaj zdjÄ™cia -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnComparePhotos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:text="ðŸ“¸\nZdjÄ™cia"
                    android:textSize="14sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <!-- Wyzwania -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChallenges"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:text="ðŸŽ¯\nWyzwania"
                    android:textSize="14sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <!-- Ustawienia -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSettings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:text="âš™ï¸\nUstawienia"
                    android:textSize="14sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
            </GridLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>