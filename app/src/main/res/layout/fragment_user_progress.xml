<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_secondary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_normal">

        <!-- Sekcja: Poziom i Punkty -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardLevelPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            style="@style/Widget.Fithub.CardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_normal"
                android:gravity="center_vertical">

                <!-- Poziom -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Poziom"
                        android:textAppearance="@style/TextAppearance.Fithub.Caption"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvUserLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_primary"
                        tools:text="15" />
                </LinearLayout>

                <!-- Separator -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:layout_marginEnd="@dimen/spacing_small"
                    android:background="@color/divider" />

                <!-- Punkty -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Punkty"
                        android:textAppearance="@style/TextAppearance.Fithub.Caption"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvUserPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        tools:text="2450" />

                    <TextView
                        android:id="@+id/tvPointsToNextLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Do kolejnego poziomu: 0"
                        android:textAppearance="@style/TextAppearance.Fithub.Caption"
                        android:textColor="@color/text_tertiary"
                        android:gravity="center"
                        android:textAlignment="center"
                        tools:text="Do poziomu 16: 550 pkt" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sekcja: Streak i Waga -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardStreakWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            style="@style/Widget.Fithub.CardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_normal"
                android:gravity="center_vertical">

                <!-- Streak -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/spacing_tiny">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_fire"
                            android:layout_marginEnd="4dp"
                            android:contentDescription="Fire icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Streak"
                            android:textAppearance="@style/TextAppearance.Fithub.Caption"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvUserStreak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 dni"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        tools:text="14 dni" />
                </LinearLayout>

                <!-- Separator -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:layout_marginEnd="@dimen/spacing_small"
                    android:background="@color/divider" />

                <!-- Schudnięto/Nabyto -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvWeightChangeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Schudnięto"
                        android:textAppearance="@style/TextAppearance.Fithub.Caption"
                        android:textColor="@color/text_secondary"
                        tools:text="Nabyto" />

                    <TextView
                        android:id="@+id/tvWeightChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0 kg"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        tools:text="+3.5 kg" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sekcja: Aktywne wyzwanie -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardActiveChallenge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            style="@style/Widget.Fithub.CardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_normal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aktywne wyzwanie"
                    android:textAppearance="@style/TextAppearance.Fithub.Headline3"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="@dimen/spacing_small" />

                <TextView
                    android:id="@+id/tvActiveChallengeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brak aktywnego wyzwania"
                    android:textAppearance="@style/TextAppearance.Fithub.Body2"
                    android:textColor="@color/text_secondary"
                    tools:text="7-dniowe wyzwanie cardio" />

                <ProgressBar
                    android:id="@+id/progressActiveChallenge"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:progressDrawable="@drawable/progress_bar_rounded"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:progress="60" />

                <TextView
                    android:id="@+id/tvActiveChallengeProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_tiny"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.Fithub.Caption"
                    android:textColor="@color/purple_primary"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:text="Postęp: 4/7 dni" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sekcja: Przyciski akcji -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            style="@style/Widget.Fithub.CardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Gablota z odznakami -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBadges"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/spacing_tiny"
                        android:text="Gablota"
                        android:textSize="13sp"
                        android:paddingTop="@dimen/spacing_medium"
                        android:paddingBottom="@dimen/spacing_medium"
                        app:icon="@drawable/ic_badge"
                        app:iconGravity="top"
                        app:iconSize="28dp"
                        app:iconTint="@color/purple_primary"
                        style="@style/Widget.Fithub.Button.Outlined" />

                    <!-- Porównaj zdjęcia -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnComparePhotos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/spacing_tiny"
                        android:text="Zdjęcia"
                        android:textSize="13sp"
                        android:paddingTop="@dimen/spacing_medium"
                        android:paddingBottom="@dimen/spacing_medium"
                        app:icon="@drawable/ic_photo"
                        app:iconGravity="top"
                        app:iconSize="28dp"
                        app:iconTint="@color/blue_info"
                        style="@style/Widget.Fithub.Button.Outlined" />
                </LinearLayout>

                <!-- Wyzwania -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChallenges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_tiny"
                    android:text="Wszystkie wyzwania"
                    android:textSize="13sp"
                    android:paddingTop="@dimen/spacing_medium"
                    android:paddingBottom="@dimen/spacing_medium"
                    app:icon="@drawable/ic_target"
                    app:iconGravity="start"
                    app:iconSize="24dp"
                    app:iconTint="@color/green_success"
                    style="@style/Widget.Fithub.Button.Outlined" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>