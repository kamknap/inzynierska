<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_small"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/ivBadgeIcon"
        android:layout_width="@dimen/icon_size_xlarge"
        android:layout_height="@dimen/icon_size_xlarge"
        android:src="@android:drawable/ic_lock_idle_lock"
        android:layout_marginEnd="@dimen/spacing_normal"
        android:contentDescription="Ikona odznaki"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView 
            android:id="@+id/tvBadgeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Fithub.Body1"
            android:textStyle="bold"
            android:textColor="@color/text_primary"/>

        <TextView 
            android:id="@+id/tvBadgeDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Fithub.Caption"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="@dimen/spacing_tiny"/>
    </LinearLayout>
</LinearLayout>