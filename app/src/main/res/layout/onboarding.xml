<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Podstawowe dane użytkownika -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Podstawowe dane"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Imię"
            android:inputType="text"
            android:layout_marginBottom="8dp" />

        <!-- Sekcja BMI -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kalkulator BMI"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnShowBMI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wprowadź dane by obliczyć BMI"
            android:layout_marginBottom="16dp" />

        <!-- Sekcja kalkulatora BMI - ukryta domyślnie -->
        <LinearLayout
            android:id="@+id/layoutBMISection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/etWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Waga (kg)"
                android:inputType="none"
                android:focusable="false"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Wzrost (cm)"
                android:inputType="none"
                android:focusable="false"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnCalculateBMI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Oblicz BMI"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etBMIResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Wynik BMI"
                android:inputType="none"
                android:focusable="false"
                android:clickable="false"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvBMICategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <!-- Przycisk zapisz -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zapisz dane"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</ScrollView>