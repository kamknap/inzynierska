        <!-- Nazwa odznaki -->
        <TextView
            android:id="@+id/tvBadgeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zdobyto odznakÄ™: WytrwaÅ‚y"
