<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="64dp"
    android:layout_height="64dp"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="@dimen/spacing_tiny"
    android:background="@drawable/bg_day_selector"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/tvDayLetter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P"
        style="@style/TextAppearance.Fithub.Caption"
        android:textColor="@color/text_day_selector"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDayNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15"
        style="@style/TextAppearance.Fithub.Body1"
        android:textColor="@color/text_day_selector"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/spacing_tiny" />

</LinearLayout>