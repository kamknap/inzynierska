<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_small"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/tvMealName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Nazwa posiłku"
        style="@style/TextAppearance.Fithub.Body1"
        android:textColor="@color/text_primary"
        android:maxLines="2"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/tvProtein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25 P"
        style="@style/TextAppearance.Fithub.Body2"
        android:textColor="@color/text_secondary"
        android:layout_marginStart="@dimen/spacing_small" />

    <TextView
        android:id="@+id/tvFat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 F"
        style="@style/TextAppearance.Fithub.Body2"
        android:textColor="@color/text_secondary"
        android:layout_marginStart="@dimen/spacing_small" />

    <TextView
        android:id="@+id/tvCarbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25 C"
        style="@style/TextAppearance.Fithub.Body2"
        android:textColor="@color/text_secondary"
        android:layout_marginStart="@dimen/spacing_small" />

    <TextView
        android:id="@+id/tvMealCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="250 kcal"
        style="@style/TextAppearance.Fithub.Body2"
        android:textColor="@color/text_secondary"
        android:layout_marginStart="@dimen/spacing_small" />

    <ImageButton
        android:id="@+id/btnDeleteMeal"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_delete_red"
        android:contentDescription="Usuń posiłek"
        android:scaleType="center"
        android:padding="6dp"
        android:layout_marginStart="@dimen/spacing_small" />

</LinearLayout>