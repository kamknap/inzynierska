<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Logo/Tytuł -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FitHub"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:layout_marginTop="48dp" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zaloguj się lub utwórz konto"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="8dp" />

        <!-- Email Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adres email"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="48dp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:hint="email@example.com" />

        <!-- Password Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasło"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:hint="••••••••" />

        <!-- Password Confirm Input (dla rejestracji) -->
        <TextView
            android:id="@+id/tvPasswordConfirmLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Potwierdź hasło"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etPasswordConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:hint="••••••••"
            android:visibility="gone" />

        <!-- Forgot Password -->
        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nie pamiętam hasła"
            android:textColor="@color/purple_700"
            android:padding="8dp"
            android:layout_gravity="end"
            android:layout_marginTop="8dp" />

        <!-- Login Button -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zaloguj się"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginTop="24dp" />

        <!-- Register Button -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zarejestruj się"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginTop="12dp" />

        <!-- Toggle Mode Text -->
        <TextView
            android:id="@+id/tvToggleMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Przejdź do rejestracji"
            android:textColor="@color/purple_700"
            android:padding="16dp"
            android:layout_marginTop="16dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="24dp" />

    </LinearLayout>

</ScrollView>
