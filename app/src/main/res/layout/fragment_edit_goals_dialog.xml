<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background_secondary"
    android:padding="@dimen/spacing_large">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Typ celu"
        android:textAppearance="@style/TextAppearance.Fithub.Body2"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="@dimen/spacing_tiny"/>

    <Spinner
        android:id="@+id/spGoalType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginBottom="@dimen/spacing_normal"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:hint="Waga docelowa (kg)"
        style="@style/Widget.Fithub.TextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etTargetWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Częstotliwość treningów"
        android:textAppearance="@style/TextAppearance.Fithub.Body2"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="@dimen/spacing_tiny"/>

    <Spinner
        android:id="@+id/spTrainingFrequency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"/>

</LinearLayout>