<?xml version="1.0" encoding="utf-8"?>
<!-- Layout dla dialogu wyszukiwania (AddMeal, AddExercise) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_normal">

    <!-- Przyciski akcji -->
    <LinearLayout
        android:id="@+id/llActionButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/spacing_normal">
        
        <!-- Miejsce na dodatkowe przyciski (skanowanie, ręczne dodanie) -->
        
    </LinearLayout>

    <!-- Pole wyszukiwania -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilSearch"
        style="@style/Widget.Fithub.TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:hint="Wyszukaj..."
        app:startIconDrawable="@android:drawable/ic_menu_search"
        app:startIconTint="@color/purple_primary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_tertiary" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Wyniki wyszukiwania -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/background_secondary">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/llSearchResults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </ScrollView>

        <!-- Wskaźnik ładowania -->
        <LinearLayout
            android:id="@+id/llLoadingIndicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminateTint="@color/purple_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wyszukiwanie produktów..."
                android:textColor="@color/text_secondary"
                android:layout_marginTop="@dimen/spacing_normal"
                style="@style/TextAppearance.Fithub.Body1" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
