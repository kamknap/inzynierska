<?xml version="1.0" encoding="utf-8"?>
<!-- Layout dla dialogu wyszukiwania (AddMeal, AddExercise) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_normal">

    <!-- Przyciski akcji -->
    <LinearLayout
        android:id="@+id/llActionButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/spacing_normal">
        
        <!-- Miejsce na dodatkowe przyciski (skanowanie, rÄ™czne dodanie) -->
        
    </LinearLayout>

    <!-- Pole wyszukiwania -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilSearch"
        style="@style/Widget.Fithub.TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:hint="Wyszukaj..."
        app:startIconDrawable="@android:drawable/ic_menu_search"
        app:startIconTint="@color/purple_primary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_tertiary" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Wyniki wyszukiwania -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/background_secondary">

        <LinearLayout
            android:id="@+id/llSearchResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

</LinearLayout>
