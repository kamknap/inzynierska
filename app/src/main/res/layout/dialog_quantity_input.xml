<?xml version="1.0" encoding="utf-8"?>
<!-- Dialog wprowadzania ilości produktu -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_large">

    <!-- Pole wprowadzania ilości -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/spacing_normal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilQuantity"
            style="@style/Widget.Fithub.TextInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Ilość"
            app:suffixText="g">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="100"
                android:selectAllOnFocus="true"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <!-- Informacje o wartościach odżywczych -->
    <androidx.cardview.widget.CardView
        style="@style/Widget.Fithub.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_primary_very_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wartości odżywcze:"
                style="@style/TextAppearance.Fithub.Body1"
                android:textColor="@color/purple_primary"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/spacing_small" />

            <TextView
                android:id="@+id/tvCalories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 kcal"
                style="@style/TextAppearance.Fithub.Headline3"
                android:textColor="@color/purple_primary"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/spacing_small" />

            <TextView
                android:id="@+id/tvProtein"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Białko: 0.0 g"
                style="@style/TextAppearance.Fithub.Body2"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tvCarbs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Węglowodany: 0.0 g"
                style="@style/TextAppearance.Fithub.Body2"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tvFat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tłuszcze: 0.0 g"
                style="@style/TextAppearance.Fithub.Body2"
                android:textColor="@color/text_primary" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
