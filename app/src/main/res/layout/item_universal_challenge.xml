<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_small"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    style="@style/Widget.Fithub.CardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_normal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="@dimen/spacing_small">

            <TextView
                android:id="@+id/tvChallengeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nazwa Wyzwania"
                android:textAppearance="@style/TextAppearance.Fithub.Headline3"
                android:textColor="@color/text_primary"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvChallengeDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opis wyzwania..."
                android:textAppearance="@style/TextAppearance.Fithub.Caption"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:maxLines="2"
                android:ellipsize="end"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChallengeAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:textSize="12sp"
            android:minWidth="90dp"
            android:paddingStart="@dimen/spacing_medium"
            android:paddingEnd="@dimen/spacing_medium"
            style="@style/Widget.Fithub.Button"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>