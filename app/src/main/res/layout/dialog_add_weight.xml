<?xml version="1.0" encoding="utf-8"?>
<!-- Dialog dodawania pomiaru wagi -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dialog_padding">

    <!-- Nagłówek -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dodaj pomiar wagi"
        style="@style/TextAppearance.Fithub.Headline3"
        android:textColor="@color/purple_primary"
        android:layout_marginBottom="@dimen/spacing_normal" />

    <!-- Pole wagi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/spacing_normal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilWeight"
            style="@style/Widget.Fithub.TextInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Waga"
            app:suffixText=" kg">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <!-- Data pomiaru -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_medium"
        android:background="@color/purple_primary_very_light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data pomiaru: "
            style="@style/TextAppearance.Fithub.Body2"
            android:textColor="@color/text_secondary" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01.01.2024"
            style="@style/TextAppearance.Fithub.Body1"
            android:textStyle="bold"
            android:textColor="@color/purple_primary" />

    </LinearLayout>

</LinearLayout>
