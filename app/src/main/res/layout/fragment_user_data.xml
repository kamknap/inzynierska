<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_normal"
    android:background="@color/background_secondary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Podstawowe dane użytkownika -->
        <TextView
            android:id="@+id/tvEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            android:text="Podstawowe dane"
            style="@style/TextAppearance.Fithub.Headline2"
            android:textColor="@color/purple_primary" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Fithub.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:hint="Imię"
            app:startIconDrawable="@android:drawable/ic_menu_myplaces"
            app:startIconTint="@color/purple_primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_tertiary" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Fithub.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:hint="Płeć"
            app:startIconDrawable="@android:drawable/ic_menu_myplaces"
            app:startIconTint="@color/purple_primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_tertiary" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Fithub.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:hint="Data urodzenia"
            app:startIconDrawable="@android:drawable/ic_menu_my_calendar"
            app:startIconTint="@color/purple_primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_tertiary" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Fithub.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:hint="Waga (kg)"
            app:startIconDrawable="@android:drawable/ic_menu_compass"
            app:startIconTint="@color/green_success">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_tertiary" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Fithub.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:hint="Wzrost (cm)"
            app:startIconDrawable="@android:drawable/ic_menu_compass"
            app:startIconTint="@color/blue_info">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_tertiary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Wyniki obliczeń -->
        <androidx.cardview.widget.CardView
            style="@style/Widget.Fithub.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_marginBottom="@dimen/spacing_normal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvBMIResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_small"
                    style="@style/TextAppearance.Fithub.Body1"
                    android:textColor="@color/blue_info"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/tvBMRResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.Fithub.Body1"
                    android:textColor="@color/green_success"
                    android:visibility="invisible"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Przycisk zapisz -->
        <Button
            android:id="@+id/btnSave"
            style="@style/Widget.Fithub.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zapisz dane"
            android:layout_marginTop="@dimen/spacing_xlarge"
            android:layout_marginBottom="@dimen/spacing_normal" />

    </LinearLayout>

</ScrollView>