<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_secondary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_normal">

        <!-- Sekcja informacji użytkownika -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            style="@style/Widget.Fithub.CardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_normal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Twój Profil"
                    android:textAppearance="@style/TextAppearance.Fithub.Headline1"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="@dimen/spacing_normal"/>

                <!-- Imię -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/spacing_small">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Imię:"
                        android:textAppearance="@style/TextAppearance.Fithub.Body1"
                        android:textColor="@color/text_secondary"/>

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Jan Kowalski"
                        android:textAppearance="@style/TextAppearance.Fithub.Body1"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:gravity="end"/>
                </LinearLayout>

                <!-- Wiek -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/spacing_small">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Wiek:"
                        android:textAppearance="@style/TextAppearance.Fithub.Body1"
                        android:textColor="@color/text_secondary"/>

                    <TextView
                        android:id="@+id/tvUserAge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="25 lat"
                        android:textAppearance="@style/TextAppearance.Fithub.Body1"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:gravity="end"/>
                </LinearLayout>

                <!-- Waga -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/spacing_small">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Waga:"
                        android:textAppearance="@style/TextAppearance.Fithub.Body1"
                        android:textColor="@color/text_secondary"/>

                    <TextView
                        android:id="@+id/tvUserWeight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="75 kg"
                        android:textAppearance="@style/TextAppearance.Fithub.Body1"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:gravity="end"/>
                </LinearLayout>

                <!-- Płeć -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/spacing_small">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Płeć:"
                        android:textAppearance="@style/TextAppearance.Fithub.Body1"
                        android:textColor="@color/text_secondary"/>

                    <TextView
                        android:id="@+id/tvUserSex"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mężczyzna"
                        android:textAppearance="@style/TextAppearance.Fithub.Body1"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:gravity="end"/>
                </LinearLayout>

                <!-- BMI -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/spacing_small">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="BMI:"
                        android:textAppearance="@style/TextAppearance.Fithub.Body1"
                        android:textColor="@color/text_secondary"/>

                    <TextView
                        android:id="@+id/tvUserBMI"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="22.5"
                        android:textAppearance="@style/TextAppearance.Fithub.Body1"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:gravity="end"/>
                </LinearLayout>

                <!-- BMR -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/spacing_small">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="BMR:"
                        android:textAppearance="@style/TextAppearance.Fithub.Body1"
                        android:textColor="@color/text_secondary"/>

                    <TextView
                        android:id="@+id/tvUserBMR"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1750 kcal"
                        android:textAppearance="@style/TextAppearance.Fithub.Body1"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:gravity="end"/>
                </LinearLayout>

                <!-- Cel -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cel:"
                        android:textAppearance="@style/TextAppearance.Fithub.Body1"
                        android:textColor="@color/text_secondary"/>

                    <TextView
                        android:id="@+id/tvUserGoal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="75 → 70 kg"
                        android:textAppearance="@style/TextAppearance.Fithub.Body1"
                        android:textStyle="bold"
                        android:textColor="@color/purple_primary"
                        android:gravity="end"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sekcja przycisków -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:text="Edytuj dane"
                android:textSize="16sp"
                style="@style/Widget.Fithub.Button"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditGoals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:text="Edytuj cele"
                android:textSize="16sp"
                style="@style/Widget.Fithub.Button"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConnectSmartwatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:text="Podłącz smartwatch"
                android:textSize="16sp"
                android:backgroundTint="@color/blue_info"
                style="@style/Widget.Fithub.Button"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContactAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:text="Skontaktuj się z autorem"
                android:textSize="16sp"
                android:backgroundTint="@color/text_secondary"
                style="@style/Widget.Fithub.Button"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wyloguj się"
                android:textSize="16sp"
                android:backgroundTint="@color/error"
                style="@style/Widget.Fithub.Button"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>