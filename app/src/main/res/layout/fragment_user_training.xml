<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvExercisePlanName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plan Treningowy 1"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnShowMuscleModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wybierz na podstawie modelu" />
    <Button
        android:id="@+id/btnSearchExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wyszukaj Ä‡wiczenie" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUserExercises"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp" />


</LinearLayout>